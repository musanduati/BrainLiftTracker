# Twitter Automation Credentials
# Copy this file to .env and fill in your actual credentials

# Your Twitter username (without @)
TWITTER_USERNAME=your_username_here

# Your Twitter password
TWITTER_PASSWORD=your_password_here

# Your email associated with the Twitter account (optional, but may be required for verification)
TWITTER_EMAIL=your_email@example.com

# Browser settings
BROWSER_TYPE=chrome  # Options: chrome, firefox, edge
HEADLESS_MODE=false  # Set to true to run browser in background

# Auto-approver settings
MAX_APPROVALS=50     # Maximum number of follow requests to approve
DELAY_SECONDS=3      # Delay between each approval action
AUTO_SCROLL=true     # Automatically scroll to load more requests