{
  "family": "workflowy-processor-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "4096",
  "memory": "8192",
  "executionRoleArn": "arn:aws:iam::{{ACCOUNT_ID}}:role/ecsTaskExecutionRole-workflowy",
  "taskRoleArn": "arn:aws:iam::{{ACCOUNT_ID}}:role/ecsTaskRole-workflowy",
  "containerDefinitions": [
    {
      "name": "workflowy-processor",
      "image": "{{ACCOUNT_ID}}.dkr.ecr.us-east-1.amazonaws.com/workflowy-processor:prod-latest",
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "prod"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-1"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "WORKFLOWY_BUCKET",
          "value": "workflowy-content"
        },
        {
          "name": "URLS_CONFIG_TABLE_V2",
          "value": "workflowy-urls-config-v2-prod"
        },
        {
          "name": "STATE_TABLE_V2",
          "value": "workflowy-state-v2-prod"
        },
        {
          "name": "SKIP_MIGRATION_TWEETS",
          "value": "false"
        },
        {
          "name": "WORKFLOWY_ENABLE_PARALLEL_PROCESSING",
          "value": "true"
        },
        {
          "name": "WORKFLOWY_BATCH_SIZE",
          "value": "15"
        },
        {
          "name": "WORKFLOWY_DELAY_BETWEEN_BATCHES",
          "value": "1.0"
        }
      ],
      "secrets": [
        {
          "name": "BRAINLIFT_TRACKER",
          "valueFrom": "{{SECRET_ARN}}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/workflowy-processor",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs-production"
        }
      }
    }
  ]
}